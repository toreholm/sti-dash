@model IEnumerable<Sti.Dash.Slideshow>
@{
    Layout = null;
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<style>
    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
        max-width: 80%;
        max-height: 50%;
        margin: auto;
        padding-top: 10px;
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="15000">
   <!-- <div id="myCarousel2" class="carousel slide" data-ride="carousel"  data-interval="3500">-->

    <div class="carousel-inner" role="listbox">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var itm = (i == 2) ? "item active" : "item";
            <div class="@itm">
                    <img src="@Html.DisplayFor(modelItem => Model.ElementAt(i).image)" />
                    <br />
                    <p>
                        @Html.DisplayFor(modelItem => Model.ElementAt(i).text)
                    </p>
            </div>
        }
    </div>

</div>   